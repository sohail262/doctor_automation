rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Doctor uploads (KB docs, images)
    match /doctors/{doctorId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == doctorId;
      allow write: if request.auth != null && request.auth.uid == doctorId
                   && request.resource.size < 10 * 1024 * 1024  // 10MB max
                   && request.resource.contentType.matches('image/.*|application/pdf');
    }
    
    // Generated content (public read for posts)
    match /generated/{doctorId}/{allPaths=**} {
      allow read: if true;  // Public CDN
      allow write: if false; // Only functions
    }
    
    // Websites
    match /websites/{doctorId}/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}